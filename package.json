{
    "name": "covscript",
    "displayName": "Covariant Script",
    "description": "Covariant Script 3/4 language support for VSCode",
    "version": "1.1.1",
    "publisher": "mikecovlee",
    "repository": {
        "type": "git",
        "url": "https://github.com/covscript/covscript-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/covscript/covscript-vscode/issues"
    },
    "author": {
        "name": "Michael Lee"
    },
    "icon": "covscript.png",
    "contributors": [],
    "license": "MIT",
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "covscript",
        "cs",
        "language",
        "syntax highlighting"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "snippets": [
            {
                "language": "covscript",
                "path": "./snippets/covscript.json"
            }
        ],
        "languages": [
            {
                "id": "covscript",
                "aliases": [
                    "CovScript",
                    "covscript"
                ],
                "extensions": [
                    ".csc",
                    ".csp",
                    ".ecs",
                    ".ecsx"
                ],
                "firstLine": "^#!.*\\b(covscript|cs)\\b",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "covscript",
                "scopeName": "source.covscript",
                "path": "./syntaxes/covscript.cson.json"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "covscript.runFile",
                    "when": "editorLangId == covscript",
                    "group": "navigation@1"
                }
            ]
        },
        "commands": [
            {
                "command": "covscript.runFile",
                "title": "Run CovScript File",
                "icon": "$(play)"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "CovScript Extension Settings",
            "properties": {
                "covscript.runner.csPath": {
                    "type": "string",
                    "default": "cs",
                    "description": "Path to CovScript interpreter executable"
                },
                "covscript.runner.csArgs": {
                    "type": "string",
                    "default": "",
                    "description": "Additional arguments to pass to CovScript interpreter"
                },
                "covscript.runner.ecsPath": {
                    "type": "string",
                    "default": "ecs",
                    "description": "Path to Extended CovScript interpreter executable"
                },
                "covscript.runner.ecsArgs": {
                    "type": "string",
                    "default": "",
                    "description": "Additional arguments to pass to Extended CovScript interpreter"
                },
                "covscript.defaultRunner": {
                    "type": "string",
                    "enum": [
                        "cs",
                        "ecs"
                    ],
                    "enumDescriptions": [
                        "CovScript",
                        "Extended CovScript"
                    ],
                    "default": "ecs",
                    "description": "Default runner for unsaved files or unknown file types."
                }
            }
        },
        "keybindings": [
            {
                "command": "covscript.runFile",
                "when": "editorTextFocus",
                "mac": "cmd+r",
                "win": "ctrl+r",
                "linux": "ctrl+r"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile"
    },
    "devDependencies": {
        "@types/vscode": "^1.100.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "eslint": "^9.32.0",
        "typescript": "^5.9.2"
    }
}