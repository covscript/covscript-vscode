{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": "#"
    },
    // symbols used as brackets
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string",
                "comment"
            ]
        }
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "'",
            "'"
        ],
        [
            "\"",
            "\""
        ]
    ],
    "wordPattern": "([A-Za-z_]\\w*)",
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(block|namespace|if|else|switch|case|default|while|loop|for|foreach|try|catch|function|class|struct)(\\s*|\\s+.*)$",
        "unIndentedLinePattern": "\\bdo\\b",
        "decreaseIndentPattern": "^\\s*(else|catch|until|end)\\s*$"
    }
}