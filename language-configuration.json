{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string",
                "comment"
            ]
        }
    ],
    "surroundingPairs": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "'",
            "'"
        ],
        [
            "\"",
            "\""
        ]
    ],
    "wordPattern": "([A-Za-z_]\\w*)",
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(block|namespace|if|else|switch|case|default|while|loop|for|foreach|try|catch|function|class|struct)\\b.*$",
        "unIndentedLinePattern": "\\bdo\\b",
        "decreaseIndentPattern": "^\\s*(else|catch|until|end)\\b.*$"
    },
}